<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="381dp"
        android:layout_height="24dp"
        android:id="@+id/photoActBannerText"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:background="@color/colorAccent"
        android:textColor="#ffffff"
        />

    <android.support.constraint.ConstraintLayout
        android:layout_width="367dp"
        android:layout_height="479dp"
        app:layout_constraintTop_toBottomOf="@+id/photoActBannerText"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:scrollbars="vertical"
        app:layout_constraintHorizontal_bias="0.75"
        android:id="@+id/phtActContraint">

        <TextView
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:id="@+id/paOfcialInfoText"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textAlignment="center" />

        <ImageView
            android:id="@+id/paImgView"
            android:layout_width="280dp"
            android:layout_height="363dp"
            android:scaleType="center"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/paOfcialInfoText"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.41" />

        </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>